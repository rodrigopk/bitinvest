<% if @type == 'sell' %>
  <% provide(:title, "Vender") %>
<% elsif @type == 'buy' %>
  <% provide(:title, "Comprar") %>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
          <h1>
            <%= image_tag( @wallet.coin.name.downcase+"-small.png", 
            alt: @wallet.coin.name ) %>
            <%= @wallet.coin.name+"("+@wallet.coin.symbol+")" %>
          </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <table class="table table-sm">
      <thead>
        <tr>
          <th>Unidades</th>
          <th>Valor($)</th>
          <th>Valor(à¸¿)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><input type="text" id="units" oninput="update(<%= @fiat %>,
                    <%= @bitcoin %>)" value="1.0"></input></td>
          <td><div id="fiat"><%= @fiat %></div></td>
          <td><div id="bitcoin"><%= @bitcoin %></div></td>
        </tr>
      <tbody>
    </table>
  </div>
</div>