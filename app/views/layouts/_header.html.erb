<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "BitInvest", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home_link), root_path %></li>
        <li><%= link_to t(:help_link),  help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(:currencies_link), coins_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account_menu %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile_link), current_user %></li>
              <li><%= link_to t(:edit_link), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout_link), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login_link), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>