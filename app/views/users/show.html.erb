<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size:50 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <table class="table">
      <%= render 'table_header' %>
      <h3>Minhas carteiras </h3>
      <tbody>
        <% if @wallets.any? %>
          <%= render @wallets %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>